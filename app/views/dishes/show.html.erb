<h1><%= @dish.name %></h1>
<ul>
  <li>Chef: <%= @dish.chef_name %></li>
  <li>Total Calories: <%= @dish.total_calories %>
</ul>
<h3>Ingredients:</h3>
<ol>
  <% @dish.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li>
  <% end %>
</ol>
<%= form_with model: @dish_ingredient, url: dish_ingredients_path, method: :post do |f| %>
  <%= f.hidden_field :dish_id, value: @dish.id %>
  <%= f.text_field :ingredient_id %>
  <%= f.submit "Add Ingredient" %>
<% end %>